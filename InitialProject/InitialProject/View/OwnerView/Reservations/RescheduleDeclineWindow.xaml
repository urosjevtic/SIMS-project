<Window x:Class="InitialProject.View.OwnerView.RescheduleDeclineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.OwnerView"
        mc:Ignorable="d"
        Title="RescheduleDeclineWindow" Height="150" Width="340"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Unesite comment za odbijanje:" Grid.Row="0"></Label>
        <TextBox Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1"></TextBox>
        <Button Command="{Binding ConfirmDeclineCommand}" Grid.Row="2" Content="Confirm"></Button>

    </Grid>
</Window>
