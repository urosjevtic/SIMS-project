        <!--Button Content="Report" Width="120" Height="40" Grid.Row="7" Grid.Column="1" 
                Command="{Binding ReportCommand}" Style="{StaticResource MenuButtonTheme}"></Button-->

        
        <ListBox Grid.Row="5"
              VerticalAlignment="Top" 
              Background="#D1EEEE" 
              ItemsSource="{Binding GuideCommentsOverview}"
              SelectedItem="{Binding SelectedComment}"
                 BorderThickness="0"
                 BorderBrush="#D1EEEE"
              IsSynchronizedWithCurrentItem="True" Height="219" Margin="68,40,113,0" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Border CornerRadius="10" Background="White" BorderBrush="#008080" BorderThickness="3"  Height="70" >
                            <TextBlock  Text="{Binding Comment}" FontSize="16" Height="69"  Style="{StaticResource textblock}"  />
                        </Border>
                        <Button Content="Report"  Command="{Binding ReportCommentCommand}"  Margin="80 0 0 0 " Style="{StaticResource MenuButtonTheme}" HorizontalAlignment="Right"></Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
