<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.GuideView"
        xmlns:wp="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
        xmlns:DVC1="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:ViewModels="clr-namespace:InitialProject.ViewModels" x:Class="InitialProject.View.GuideView.Visitation"
        mc:Ignorable="d"
        Title="Visitation" Height="650" Width="500" Foreground="#004040"  Background="#D1EEEE" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition  Height="1.3*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="5*"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding TourName}" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"></Label>
        <Label Content="Guests age categories: " FontWeight="SemiBold" FontSize="16" Grid.Row="1"></Label>
 
        <wp:Chart Height="200" Width="300" Grid.Row="2"  BorderThickness="0" Background="#D1EEEE" LegendTitle="Legend">
            <wp:ColumnSeries ItemsSource="{Binding AgeCategories}" Background="#D1EEEE" BorderThickness="0"
                             DependentValuePath="Count"
                      IndependentValuePath="Category" Margin="0,0,0,0"/>

        </wp:Chart>
        
    
        

        <Label Content="Guests with(out) vouchers: " Grid.Row="4" FontWeight="SemiBold" FontSize="16"></Label>
        <DVC1:PieChart Grid.Row="5" Hoverable="False"  Visibility="Visible"  x:Name="MyPieChart" >
        </DVC1:PieChart>


    </Grid>
</Window>
