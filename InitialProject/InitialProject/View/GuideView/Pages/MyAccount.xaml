                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                            </Grid>
                                            <Grid></Grid>
                                            <Grid  Margin="30 0 0 0" Grid.Row="0" Grid.Column="0">
                                                <Image Source="/Resources/Images/recenzije1.png" Width="28" Height="28" ></Image>
                                            </Grid>
                                            <Grid  Margin="30 0 0 0" Grid.Column="1" Grid.Row="0">
                                                <Label Content="Average rating: " FontSize="14" Foreground="#004040"></Label>
                                            </Grid>
                                            <Grid  Margin="30 0 0 0" Grid.Row="0" Grid.Column="1">
                                                <TextBlock Text="{Binding AverageRating}" FontSize="14" TextAlignment="Center"  Margin="-5 7 0 0" Foreground="#004040"></TextBlock>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

