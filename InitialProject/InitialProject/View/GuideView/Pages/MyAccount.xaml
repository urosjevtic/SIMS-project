        <Image Source="/Resources/Images/superGuide.png" Width="45" Height="45" Grid.Row="3" HorizontalAlignment="Left" Margin="50 0 0 0"/>

        <Button Grid.Row="1" Grid.Column="1" Background="#D1eeee" Height="50" Width="200" Style="{StaticResource QuiteJobButtonTheme}"
                FontSize="16" FontWeight="SemiBold" Foreground="#004040" BorderThickness="0" Margin="90 0 0 0 "
                Command="{Binding QuitJobCommand}">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/Images/otkaz.png" Width="40" Height="40" ></Image>
                <TextBlock Text="Quite your job"  FontSize="16" FontWeight="Bold" Foreground="#004040"  Margin="0 7 0 0"></TextBlock>
            </StackPanel>
        </Button>
        <TextBlock Text="By quiting job all tours will be canceled and registed guests will receive vouchers for." Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Grid.RowSpan="2" FontSize="13" Height="70" Width="150" Margin="210,5,40,0"></TextBlock>

        <Label Content="Super guide status: " Grid.Row="3"  FontSize="16" Margin="90,7,10,0" FontWeight="Bold" Foreground="#004040"></Label>
        <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="Languages ​​for which you are a super guide:" Foreground="#004040" Margin="90 0 0 0" FontSize="14"></Label>
        <DataGrid Style="{StaticResource DataGridStyle}" ItemsSource="{Binding SuperGuideStatus}"  CanUserResizeRows="False"  FontSize="14"
                  AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="5" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="2" Margin="73,0,296,41">
            <DataGrid.Columns>
                <DataGridTemplateColumn  Width="1*" Header="Language">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Language}"></TextBlock>
