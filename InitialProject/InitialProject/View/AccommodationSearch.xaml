<Window x:Class="InitialProject.View.AccommodationSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="AccommodationSearch" Height="450" Width="800">
    <Grid Margin="0,17,0,-17">
        <!--Margin="10,-13,0,0" Height="453" VerticalAlignment="Top">-->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="350"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Accommodation Search" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" RenderTransformOrigin="0.509,-0.148"/>

        <Grid Grid.Row="1" Margin="0,0,0,220">

            <!-- <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions> -->

            <StackPanel Orientation="Horizontal">
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,400,0"   >
                    <TextBlock Text="Name" HorizontalAlignment="Left" Margin="50,0,0,10" Padding="10"/>
                    <TextBlock Text="Location (City)"  HorizontalAlignment="Left" Margin="50,0,0,10" Padding="10"/>
                    <TextBlock Text="Location (Country)"  HorizontalAlignment="Left" Margin="50,0,0,10" Padding="10"/>
                </StackPanel>
                <StackPanel Grid.Column="1" RenderTransformOrigin="0.5,0.5" >
                    <TextBox Text="{Binding Path=AccommodationName, UpdateSourceTrigger=PropertyChanged}" Margin="-370,0,0,20" Height="30" Width="150" HorizontalAlignment="Left" TextAlignment="Center" FontSize="15"/>
                    <TextBox Text="{Binding Path=Location, UpdateSourceTrigger=PropertyChanged}" Margin="-370,0,0,20" Height="30" Width="150" HorizontalAlignment="Left" TextAlignment="Center" FontSize="15"/>
                    <TextBox Text="{Binding Path=Location, UpdateSourceTrigger=PropertyChanged}" Margin="-370,0,0,15" Height="30" Width="150" HorizontalAlignment="Left" TextAlignment="Center" FontSize="15"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Accommodation type" HorizontalAlignment="Left" Margin="400,0,0,10" Padding="10"/>
                    <TextBlock Text="Number of guests" HorizontalAlignment="Left" Margin="400,0,0,10" Padding="10"/>
                    <TextBlock Text="Reservation days" HorizontalAlignment="Left" Margin="400,0,0,10" Padding="10"/>
                </StackPanel>
                <!-- <StackPanel Grid.Column="1" RenderTransformOrigin="0.5,0.5" >
                <TextBox Text="{Binding Path=AccommodationName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20" Height="30" Width="150" HorizontalAlignment="Left" TextAlignment="Center" FontSize="15"/>
                <TextBox Text="{Binding Path=Location, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20" Height="30" Width="150" HorizontalAlignment="Left" TextAlignment="Center" FontSize="15"/>
                <TextBox Text="{Binding Path=Location, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Height="30" Width="150" HorizontalAlignment="Left" TextAlignment="Center" FontSize="15"/>
                </StackPanel>-->
                <StackPanel>
                    <ComboBox x:Name="accommodationType" SelectedValuePath="content" Text="{Binding Path=AccommodationTypes}"  Margin="50,0,0,20" Height="30" Width="150" HorizontalAlignment="Left" FontSize="15">
                        <ComboBoxItem Content = "House"  />
                        <ComboBoxItem Content = "Appartment" />
                        <ComboBoxItem Content = "Cabin" />
                    </ComboBox>
                    <TextBox Text="{Binding Path=GuestsNumber, UpdateSourceTrigger=PropertyChanged}" Margin="50,0,0,15" Height="30" Width="150" HorizontalAlignment="Left" TextAlignment="Center" FontSize="15"/>
                    <TextBox Text="{Binding Path=ReservationDays, UpdateSourceTrigger=PropertyChanged}" Margin="50,0,0,15" Height="30" Width="150" HorizontalAlignment="Left" TextAlignment="Center" FontSize="15"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Button x:Name="SerchButton" Content="Search" Width="100" Margin="334,141,366,169" Grid.Row="1" Click="SearchButton_Click"/>
        <Grid Grid.Row="2" Margin="0,-150,0,0">

        </Grid>
    </Grid>
</Window>
