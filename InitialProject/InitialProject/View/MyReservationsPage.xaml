<Page
    x:Class="InitialProject.View.MyReservationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InitialProject.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MyReservationsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            Margin="30,0,0,0"
            VerticalAlignment="Center"
            Content="Overview of reservations"
            FontSize="20" />

        <TabControl
            Grid.Row="1"
            Width="800"
            Margin="0,20,0,20">
            <TabItem Background="AliceBlue" Header="My Reservations">
                <Grid Background="AliceBlue">
                    <!--<Grid.ColumnDefinitions>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="316*"/>
                    </Grid.ColumnDefinitions>-->
                    <ListBox
                        x:Name="previousTrips"
                        Grid.ColumnSpan="2"
                        Width="800"
                        Margin="0,0,-6,0"
                        HorizontalContentAlignment="Stretch"
                        Background="AliceBlue"
                        BorderThickness="0"
                        ItemsSource="{Binding Reservations}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectedItem="{Binding SelectedReservation}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                        <Setter Property="IsSelected" Value="True" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Blue" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" />
                                        <Grid Grid.Column="1" Margin="10,10,10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Text="{Binding Accommodation.Name}"
                                                TextWrapping="Wrap" />

                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="Start date: " />
                                                <TextBlock Text="{Binding StartDate}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="End date: " />
                                                <TextBlock Text="{Binding EndDate}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="City: " />
                                                <TextBlock Text="{Binding Accommodation.Location.City}" />
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">
                                                <Button
                                                    Name="ViewButton"
                                                    Width="120"
                                                    Height="40"
                                                    Margin="0,10,0,10"
                                                    HorizontalAlignment="Right"
                                                    Background="LightGray"
                                                    BorderBrush="LightGray"
                                                    Click=" CancelButton_Click"
                                                    Command="{Binding ElementName=AccommodationsPage, Path=DataContext.ShowAccommodationInfoCommand}"
                                                    Content="Cancel reservation" />
                                                <Button
                                                    Width="120"
                                                    Height="40"
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Right"
                                                    Background="LightGray"
                                                    BorderBrush="LightGray"
                                                    Click="MoveReservationButton_Click1"
                                                    Content="Move reservtaion" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </TabItem>
            <TabItem Background="AliceBlue" Header="Reservtaions pending">
                <Grid Background="AliceBlue">
                    <ListBox
                        x:Name="pendingReservations"
                        Grid.Row="1"
                        Width="800"
                        HorizontalContentAlignment="Stretch"
                        Background="AliceBlue"
                        BorderThickness="0"
                        ItemsSource="{Binding Pending}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                        <Setter Property="IsSelected" Value="True" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Blue" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" />

                                        <Grid Grid.Column="1" Margin="10,10,10,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Text="{Binding Reservation.Accommodation.Name}"
                                                TextWrapping="Wrap" />

                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="Reschedule start date: " />
                                                <TextBlock Text="{Binding RescheduleStartDate}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="Reschedule end date: " />
                                                <TextBlock Text="{Binding RescheduleEndDate}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="City: " />
                                                <TextBlock Text="{Binding Reservation.Accommodation.Location.City}" />
                                            </StackPanel>

                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </TabItem>
            <TabItem Background="AliceBlue" Header="Approved reservations">
                <Grid Background="AliceBlue">
                    <ListBox
                        x:Name="approvedResrvations"
                        Grid.Row="1"
                        Width="800"
                        HorizontalContentAlignment="Stretch"
                        Background="AliceBlue"
                        BorderThickness="0"
                        ItemsSource="{Binding Approved}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                        <Setter Property="IsSelected" Value="True" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Blue" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" />

                                        <Grid Grid.Column="1" Margin="10,10,10,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Text="{Binding Reservation.Accommodation.Name}"
                                                TextWrapping="Wrap" />

                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="Reschedule start date: " />
                                                <TextBlock Text="{Binding RescheduleStartDate}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="Reschedule end date: " />
                                                <TextBlock Text="{Binding RescheduleEndDate}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="City: " />
                                                <TextBlock Text="{Binding Reservation.Accommodation.Location.City}" />
                                            </StackPanel>

                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </TabItem>


            <TabItem Background="AliceBlue" Header="Rejected reservations">
                <Grid Background="AliceBlue">
                    <ListBox
                        x:Name="rejectedResrvations"
                        Grid.Row="1"
                        Width="800"
                        HorizontalContentAlignment="Stretch"
                        Background="AliceBlue"
                        BorderThickness="0"
                        ItemsSource="{Binding Request}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                        <Setter Property="IsSelected" Value="True" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Blue" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="750" />
                                            <ColumnDefinition Width="40" />
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" />

                                        <Grid Grid.Column="1" Margin="10,10,10,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Text="{Binding RescheduleRequest.Reservation.Accommodation.Name}"
                                                TextWrapping="Wrap" />

                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="Reschedule start date: " />
                                                <TextBlock Text="{Binding RescheduleRequest.RescheduleStartDate}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="Reschedule end date: " />
                                                <TextBlock Text="{Binding RescheduleRequest.RescheduleEndDate}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    FontWeight="Bold"
                                                    Text="City: " />
                                                <TextBlock Text="{Binding RescheduleRequest.Reservation.Accommodation.Location.City}" />
                                            </StackPanel>
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                Margin="0,0,5,0"
                                                FontWeight="Bold"
                                                Text="Owner's comment: " />
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.RowSpan="2"
                                                Grid.Column="1"
                                                Margin="0,0,10,0"
                                                Text="{Binding ReasonForDeclining}" />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</Page>
