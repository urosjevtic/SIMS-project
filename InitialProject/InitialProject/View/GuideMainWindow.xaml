<Window x:Class="InitialProject.View.GuideMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="GuideMainWindow" Height="600" Width="800">
    <TabControl>
        <TabItem Header="My tours">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="toursDataGrid" Grid.Row="1" ItemsSource="{Binding Tours}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}"  Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"  Width="130" />
                        <DataGridTextColumn Header="Location" Binding="{Binding Location.City}"  Width="120"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="150" />
                        <DataGridTextColumn Header="Language" Binding="{Binding Language}"  Width="100"/>
                        <DataGridTextColumn Header="MaxGuests " Binding="{Binding MaxGuests }" />
                        <DataGridTextColumn Header="Start " Binding="{Binding Start }" />
                        <DataGridTextColumn Header="Duration " Binding="{Binding Duration }" />
                        <DataGridTextColumn Header="CoverImageUrl " Binding="{Binding CoverImageUrl }" />

                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Content="Add tour" Margin="10" Click="AddTour"/>
                    <Button Content="Cancel tour" Margin="10"/>
                </StackPanel>
            </Grid>
        </TabItem>

        <!-- Second Tab Item -->
        <TabItem Header="Today tours">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="399*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="395*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="todayTours" Grid.Row="1" ItemsSource="{Binding Tours}" AutoGenerateColumns="True" Margin="0,0,0,-10" Grid.ColumnSpan="3" Height="525" VerticalAlignment="Bottom">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}"  Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"  Width="110" />
                        <DataGridTextColumn Header="Location" Binding="{Binding Location.City}"  Width="120"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="150" />
                        <DataGridTextColumn Header="Language" Binding="{Binding Language}"  Width="100"/>
                        <DataGridTextColumn Header="MaxGuests " Binding="{Binding MaxGuests }" Width="80" />
                        <DataGridTextColumn Header="Start " Binding="{Binding Start }" Width="80"/>
                        <DataGridTextColumn Header="Duration " Binding="{Binding Duration }" Width="110"/>

                    </DataGrid.Columns>
                </DataGrid>


            </Grid>

        </TabItem>

    </TabControl>


</Window>
